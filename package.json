{
  "name": "vscode-extension",
  "displayName": "VSCode-Extension",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:kodnestProblems"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "kodnestProblems",
          "name": "Kodnest Problems",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "kodnest.openProblem",
        "title": "Open Problem"
      },
      {
        "command": "kodnest.refreshProblems",
        "title": "Refresh Problems"
      },
      {
        "command": "kodnest.showDescription",
        "title": "Show Problem Description"
      },
      {
        "command": "kodnest.run",
        "title": "Run Solution"
      },
      {
        "command": "kodnest.submit",
        "title": "Submit Solution"
      },
      {
        "command": "kodnest.createEditor",
        "title": "Create Editor for Problem"
      }
    ],
    "codeLensProviders": [
      {
        "language": "javascript",
        "provider": "kodnestCodeLensProvider"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "marked": "^16.3.0",
    "sanitize-html": "^2.17.0"
  }
}
